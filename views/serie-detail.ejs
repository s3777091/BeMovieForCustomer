<script>
  let trialLink = "<%-movie.trial%>";
  if (!trialLink) {
    return;
  }
  if (trialLink.includes('embed')) {
    $("#player").attr("src", trialLink);
  } else {
    let videoId = trialLink.split("v=")[1];
    let link = "//www.youtube.com/embed/" + videoId;
    $("#player").attr("src", link);
  }


</script>